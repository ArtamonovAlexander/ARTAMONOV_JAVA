<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driverManager" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="jdbc:mysql://localhost:3306/users_service"/>
        <property name="username" value="root"/>
        <property name="password" value="1234"/>
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
    </bean>

    <bean id="jdbc" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg name="dataSource" ref="driverManager"/>
    </bean>

    <bean id="userRepositoryImpl" class="repositiory.jdbc.UserRepositoryImpl">
        <constructor-arg name="jdbcTemplate" ref="jdbc"/>
    </bean>

    <bean id="usersService" class="services.UsersService">
        <constructor-arg name="userRepository" ref="userRepositoryImpl"/>
    </bean>
</beans>